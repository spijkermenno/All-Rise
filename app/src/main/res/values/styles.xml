<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/all_rise_yellow</item>
        <item name="colorPrimaryDark">@color/all_rise_yellow</item>
        <item name="colorAccent">@color/all_rise_yellow</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.WorkoutButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/all_rise_yellow</item>
        <item name="android:textColor">@color/all_rise_gray</item>
    </style>

</resources>
